!!! 5
%html
  %head
    %title Arrow
    %link(rel="stylesheet" href="./css/lib/wing.min.css")
    %link(rel="stylesheet" href="./css/styles.css")
  %body
    .container
      -if login?
        %h1= Hello, #{username}
      -else
        %form{:action => "/login", :method => "post"}
          %input{:type => "text", :name => "username", :placeholder => "Username"}
          %input{:type => "password", :name => "password", :placeholder => "Password"}
          %input{:type => "submit", :value => "Submit"}
      %h1(id="message") Arrow
      -@links.each do |link|
        #projects
          .project
            %form{:action => "/#{link.id}/upvote", :method => "POST"}(class="upvote-form")
              %button(onclick="this.submit()" class="upvote-btn")
                %span.upvote-arrow
                %p #{link.points}
            %a(href="#{link.url}" class="project-link")
              #{link.title}
              .project-host (#{URI.parse(link.url).host})
